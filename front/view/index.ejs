<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Mafon</title>
    <script src="//vk.com/js/api/openapi.js" type="text/javascript"></script>
    <script src="/js/vendors/exoskeleton/exoskeleton.js"></script>
    <script>
        // Передаем параметры приложения
        var require = {
            config: {
                config: {
                    appId       : '<%= appId %>',
                    redirectUrl : '<%= redirectUrl %>'
                }
            }
        };
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();
    </script>
</head>
<body>
    <h1>Mafon - коллективный плеер <%= appId %></h1>
    <button class="js-open-auth">Авторизация</button>

    <div class="playlist">
        <h2>Поиск музыки</h2>
        <form class="playlist__search" onsubmit="return false;">
            <input type="text" name="search" class="playlist__search__field">
            <button type="submit">Искать</button>
        </form>

        <ul class="playlist__list">

        </ul>
    </div>


    <script data-main="/js/main" src="/js/vendors/requirejs/require.js"></script>
    <script>
        require.config({
            baseUrl: '/js/',
            paths: {
                'ejs' : 'vendors/ejs/ejs.min',
                'text': 'vendors/requirejs-text/text',
                'rejs': 'vendors/requirejs-ejs-plugin/rejs'
            },
            shim: {
                ejs: {
                    exports: 'ejs'
                }
            },
        });
    </script>
</body>
</html>