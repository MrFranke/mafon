<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Mafon</title>
    <script src="//vk.com/js/api/openapi.js" type="text/javascript"></script>
    <script>
        // Передаем параметры приложения
        var require = {
            config: {
                config: {
                    appId       : '<%= appId %>',
                    redirectUrl : '<%= redirectUrl %>'
                }
            }
        };
    </script>
</head>
<body>
    <h1>Mafon - коллективный плеер <%= appId %></h1>
    <button class="js-open-auth">Авторизация</button>

    <!-- Инклюдим модуль панели управления  -->
    <div class="controls"></div>

    <!-- Инклюдим модуль плейлиста  -->
    <div class="playlist"></div>

    <!-- Инклюдим модуль поиска по музыке  -->
    <div class="search"></div>


    <script data-main="/js/main" src="/js/vendors/requirejs/require.js"></script>
</body>
</html>